<odoo>
    <record id="view_bank_statement_line_search_bank_rec_widget_inherit_csv" model="ir.ui.view">
        <field name="name">account.bank.statement.line.search.bank_rec_widget.inherit.csv</field>
        <field name="model">account.bank.statement.line</field>
        <field name="inherit_id" ref="account_accountant.view_bank_statement_line_search_bank_rec_widget"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter name="imported_statement_lines"
                        string="Imported Transactions"
                        domain="[('id', 'in', context.get('imported_transaction_ids', []))]"
                        invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
